{
  "name": "create-react-electron-app",
  "version": "1.0.0",
  "private": true,
  "main": "src/electron.js",
  "author": "Daniel Bird",
  "description": "A starting template for creating a react and electron app",
  "homepage": "./",
  "build": {
    "extends": null,
    "files": [
      "./build/**/*",
      "./src/electron.js"
    ]
  },
  "scripts": {
    "start": "concurrently \"npm run react\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run react-build && npm run electron-build",
    "react": "BROWSER=none react-scripts start",
    "electron": "electron .",
    "react-build": "react-scripts build",
    "electron-build": "electron-builder"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.8.1",
    "electron-reload": "^1.5.0",
    "wait-on": "^5.2.0"
  }
}
